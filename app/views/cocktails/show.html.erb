<h1>Cocktail: <%= @cocktail.name %></h1>

<%= link_to "new dose", new_cocktail_dose_path(@cocktail.id) %>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>: <%= dose.description %>
    <%= link_to "X", dose_path(dose.id), method: "delete" %>
  </li>
  <% end %>
</ul>
