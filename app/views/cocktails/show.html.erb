<h1>Cocktail: <%= @cocktail.name %></h1>

<p>Active Storage model-associated image:</p>
<%= cl_image_tag @cocktail.photo.key, height: 200, crop: :fill %>
<ul>
  <li>Key: <%= @cocktail.photo.key %></li>
  <li>Filename: <%= @cocktail.photo.filename %></li>
  <li>Content type: <%= @cocktail.photo.content_type %></li>
  <li>Metadata: <%= @cocktail.photo.metadata %></li>
</ul>

<%= simple_form_for [ @cocktail, @dose ] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Add dose", class: "btn btn-primary" %>
<% end %>

<br>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>: <%= dose.description %>
    <%= link_to "X", dose_path(dose.id), method: "delete" %>
  </li>
  <% end %>
</ul>
